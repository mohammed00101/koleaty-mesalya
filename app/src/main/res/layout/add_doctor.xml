<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="59dp"
        android:background="#ffffff">

        <EditText
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextadddegree"
            android:background="#ffffff"
            android:textColor="#000000"
            android:hint="الدرجة العلمية أ او د ....."
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#ffffff">

        <EditText
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddFirstName"
            android:background="#ffffff"
            android:textColor="#010101"
            android:hint="الاسم الأول"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_height="59dp">
        <EditText
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextaddlastName"
            android:background="#ffffff"
            android:textColor="#030303"
            android:hint="الاسم الأخير"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="أضافة"
        android:id="@+id/add_Doctor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:background="#172ad4" />
</LinearLayout>
</ScrollView>
</FrameLayout>