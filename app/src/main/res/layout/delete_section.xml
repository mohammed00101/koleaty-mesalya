<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".dialog.AddSection"
    android:background="#eaeaea">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/deletespinner_year"
                    android:background="@drawable/custombspinner"
                    android:spinnerMode="dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/deleteSection_spinner"
                    android:background="@drawable/custombspinner"
                    android:spinnerMode="dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/deletespinner_group"
                    android:background="@drawable/custombspinner"
                    android:spinnerMode="dropdown"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="حذف"
                android:id="@+id/deleteSection"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="#ffffff"
                android:background="#172ad4" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>