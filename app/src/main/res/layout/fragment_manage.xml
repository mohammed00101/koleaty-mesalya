<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ManageFragment"
    android:background="#e9e9e9"
    android:id="@+id/fragment_manage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/radiog">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="التسجيل كمسؤول"
                        android:id="@+id/radioButtonadmin"
                        android:layout_alignBottom="@+id/imageView3"
                        android:layout_alignTop="@+id/imageView3"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/imageView3"
                        android:background="#ffffff"
                        android:checked="false"
                        android:textColor="#010101"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_admin"
                        android:id="@+id/imageView3"
                        android:background="#ffffff"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView3"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/editor_ic"
                        android:layout_marginTop="1dp"
                        android:id="@+id/imageView4"
                        android:background="#ffffff" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="التسجيل كمحرر"
                        android:id="@+id/radioButtoneditor"
                        android:layout_alignTop="@+id/imageView4"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/imageView4"
                        android:layout_toEndOf="@+id/imageView4"
                        android:background="#ffffff"
                        android:textColor="#010101" />
                </RelativeLayout>
            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  تعديل رمز الدخول للمحرر "
                android:clickable="false"
                android:id="@+id/buttonaddEditor"
                android:background="#ffffff"
                android:layout_below="@+id/radiog"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="1dp"
                android:textColor="#020202" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editTextchangeResultSite"
                android:text="تغير موقع النتيجة"
                android:layout_marginTop="1dp"
                android:layout_alignParentStart="true"
                android:background="#ffffff"
                android:layout_below="@+id/buttonaddEditor" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/editTextChangeSiteTam"
                android:text="تغير موقع الجروب الرسمى للفريق"
                android:layout_below="@+id/editTextchangeResultSite"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:layout_alignParentStart="true"
                android:background="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/editTextchangegroupF"
                android:text="تغير موقع الجروب الرسمى للكلية"
                android:layout_below="@+id/editTextChangeSiteTam"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="1dp"
                android:background="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/editTextchangeSiteF"
                android:text="تغير موقع الكلية"
                android:layout_below="@+id/editTextchangegroupF"
                android:layout_alignParentStart="true"
                android:layout_marginTop="1dp"
                android:background="#ffffff"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>
