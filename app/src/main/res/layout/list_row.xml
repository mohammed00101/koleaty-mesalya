<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="8dp"
        android:background="@drawable/image_bg"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radiobutton_now"
            android:layout_above="@+id/list_image_go"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


      //subject

    <TextView
        android:id="@+id/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="رياضة"
        android:paddingTop="@dimen/message_vertical_padding"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2198dc"
        android:layout_above="@+id/place"
        android:layout_toEndOf="@+id/list_image" />



    // -- place
    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/message_vertical_padding"
        android:text="ق 100"
        android:textSize="15sp"
        android:textStyle="normal"
        android:textColor="@android:color/background_dark"
        android:layout_alignTop="@+id/list_image_go"
        android:layout_alignStart="@+id/end" />



// begin time

    <TextView
        android:id="@+id/begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/message_vertical_padding"
        android:text="12:45Pm"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="#2e5687"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textViewtimer" />
    // begin time

    <TextView
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/message_vertical_padding"
        android:text="13:45Pm"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="#2e5687"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/list_image_go" />



    <ImageView
        android:id="@+id/list_image_go"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textStyle="bold"
        android:id="@+id/textViewtimer"
        android:layout_alignBottom="@+id/textViewDoctor"
        android:layout_alignLeft="@+id/textViewType"
        android:layout_alignStart="@+id/textViewType"
        android:layout_alignTop="@+id/textViewDoctor"
        android:layout_alignRight="@+id/textViewType"
        android:layout_alignEnd="@+id/textViewType"
        android:textColor="#fa0303" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="محاضرة"
        android:id="@+id/textViewType"
        android:layout_alignTop="@+id/subject"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ا؟احمد جمال"
        android:id="@+id/textViewDoctor"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/place"
        android:layout_alignStart="@+id/subject" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="الى"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/begin"
        android:layout_toRightOf="@+id/begin"
        android:layout_toEndOf="@+id/begin"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="من"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/begin"
        android:layout_alignLeft="@+id/subject"
        android:layout_alignStart="@+id/subject"
        android:textColor="#000000" />


</RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
